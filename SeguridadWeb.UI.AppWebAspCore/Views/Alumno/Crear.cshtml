
@{
    ViewBag.Title = "Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        Lista de Alumnos
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-success btn-sm float-right" onclick="abrirPopUpForm(null)">
                            <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="tbdata" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nie</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>DUI</th>
                            <th>Fecha de Nacimiento</th>
                            <th>Genero</th>
                            <th>Email</th>
                            <th>Direccion</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Alumno</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />

                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="txtidusuario">Id Usuario</label>
                                <input type="text" class="form-control required" id="txtidusuario" name="usuario">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="txtcodigo">Nie</label>
                                <input type="text" class="form-control required" id="txtcodigo" name="codigo">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtdui">DUI</label>
                                <input type="text" class="form-control" id="txtdui" name="dui">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtnombres">Nombres</label>
                                <input type="text" class="form-control required" id="txtnombres" name="nombres">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtapellidos">Apellidos</label>
                                <input type="text" class="form-control required" id="txtapellidos" name="apellidos">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtfechanacimiento">Fecha Nacimiento</label>
                                <input type="date" class="form-control required" id="txtfechanacimiento" name="fechanacimiento">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="cbosexo">Genero</label>
                                <select id="cbosexo" class="form-control">
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="txtpartida">Numero de Partida</label>
                                <input type="text" class="form-control required" id="txtpartida" name="partida">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="txtfolio">Numero Folio</label>
                                <input type="text" class="form-control required" id="txtfolio" name="folio">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="txtlibro">Numero de Libro</label>
                                <input type="text" class="form-control required" id="txtlibro" name="libro">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="txttomo">Numero de Tomo</label>
                                <input type="text" class="form-control" id="txttomo" name="tomo">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtnacionalidad">Nacionalidad</label>
                                <input type="text" class="form-control required" id="txtnacionalidad" name="nacionalidad" />
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txttelefono">Telefono</label>
                                <input type="text" class="form-control required" id="txttelefono" name="telefono" />
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtemail">Email</label>
                                <input type="text" class="form-control required" id="txtemail" name="email" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtdireccion">Direccion</label>
                                <input type="text" class="form-control required" id="txtdireccion" name="direccion">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtdepartamento">Departamento</label>
                                <input type="text" class="form-control required" id="txtdepartamento" name="departamento">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtcanton">Canton</label>
                                <input type="text" class="form-control required" id="txtcanton" name="canton">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtcaserio">Caserio</label>
                                <input type="text" class="form-control" id="txtcaserio" name="caserio">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtmunicipio">Municipio</label>
                                <input type="text" class="form-control required" id="txtmunicipio" name="municipio">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtresidencia">Residencia</label>
                                <input type="text" class="form-control required" id="txtresidencia" name="residencia">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtcivil">Estado Civíl</label>
                                <input type="text" class="form-control" id="txtcivil" name="civil">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="txtfamilia">Convivencia Familiar</label>
                                <input type="text" class="form-control required" id="txtfamilia" name="familia">
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Controllers/Alumno.js")" type="text/javascript"></script>
}


