@model SeguridadWeb.EntidadesDeNegocio.Grado

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Grado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Grado1" class="control-label"></label>
                <input asp-for="Grado1" class="form-control" />
                <span asp-validation-for="Grado1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Cancelar</a>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>$(function () {
            $("form input[name]").trigger("blur");
        });</script>
}
